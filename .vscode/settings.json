// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#c560cb",
        "activityBar.activeBorder": "#d0ca6f",
        "activityBar.background": "#c560cb",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#d0ca6f",
        "activityBarBadge.foreground": "#15202b",
        "statusBar.background": "#b43dbb",
        "statusBar.border": "#b43dbb",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#c560cb",
        "titleBar.activeBackground": "#b43dbb",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.border": "#b43dbb",
        "titleBar.inactiveBackground": "#b43dbb99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#b43dbb"
}
